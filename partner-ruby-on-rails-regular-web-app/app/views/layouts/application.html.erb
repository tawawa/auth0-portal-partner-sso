<!DOCTYPE html>
<html>
<head>
  <title>Partner</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= yield :cdn_code %>
  <%= stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Auth0 - Ruby On Rails</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if params[:controller] == 'home' %>"><a href="/">Home</a></li>
            <% if session[:userinfo] %>
              <li class="<%= 'active' if params[:controller] == 'user' %>"><a href="/user">Profile</a></li>
            <% else %>
              <li class="<%= 'active' if params[:controller] == 'login' %>"><a href="/login">Login</a></li>
            <% end %>
          </ul>
          <% if session[:userinfo] %>
          <ul class="nav navbar-nav navbar-right">
              <li class="<%= 'active' if params[:controller] == 'logout' %>"><a href="/logout">Logout</a></li>
          </ul>
          <% end %>
        </div>
      </div>
    </nav>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
